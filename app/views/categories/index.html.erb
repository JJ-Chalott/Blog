<div class="large-container center-block">
    <div class="card padding margin-top">

        <h1>Categorias</h1>
        <br/>

        <table>
          <thead>
            <tr>
              <th>Titulo</th>
              <th>Color</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @categories.each do |category| %>
              <tr>
                <td><%= category.title %></td>
                <td><%= category.color %></td>
                    <td>
                        <div class="card padding margin-top">
                        <%= link_to 'Ver', category %>
                        </div>
                    </td>
                    <td>
                        <div class="card padding margin-top">
                        <%= link_to 'Editar', edit_category_path(category) %>
                        </div>
                    </td>
                        
                    <td>
                        <div class="card padding margin-top">
                            <%= link_to 'Eliminar', category, method: :delete, data: { confirm: 'Â¿Estas seguro que deseas eliminar esta categoria' } %>
                        </div>
                    </td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <br>

        <%= link_to 'Crear nueva categoria', new_category_path %>
    </div>
</div>
